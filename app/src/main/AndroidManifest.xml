<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tritonmon.activity" >

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/tritonmon"
        android:largeHeap="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Splash"
            android:label="@string/tritonmon" >
        </activity>
        <activity
            android:name=".Tritonmon"
            android:label="@string/tritonmon" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Battle"
            android:label="@string/battle" >
        </activity>
        <activity
            android:name=".Login"
            android:label="@string/create_avatar" >
        </activity>
        <activity
            android:name=".FacebookLogin"
            android:label="@string/facebook_login" >
        </activity>
        <activity
            android:name=".MainMenu"
            android:label="@string/main_menu" >
        </activity>
        <activity
            android:name=".MapsActivity"
            android:label="@string/view_map" >
        </activity>
        <activity
            android:name=".PokeCenter"
            android:label="@string/pokecenter" >
        </activity>
        <activity
            android:name=".TradingList"
            android:label="@string/trading_list" >
        </activity>
        <activity
            android:name=".TradingView"
            android:label="@string/trading_view" >
        </activity>
        <activity
            android:name=".Welcome"
            android:label="@string/welcome" >
        </activity>
        <activity
            android:name=".Register"
            android:label="@string/register" >
        </activity>
        <activity
            android:name=".TrainerCard"
            android:label="@string/trainer_card" >
        </activity>
        <!-- <activity -->
        <!-- android:name="com.tritonmon.activity.SettingsActivity" -->
        <!-- android:label="@string/title_activity_settings" > -->
        <!-- </activity> -->
        <activity
            android:name=".Settings"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".Party"
            android:label="@string/party" >
        </activity>
        <activity
            android:name=".BattleParty"
            android:label="@string/title_activity_battle_party" >
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />
    </application>

    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

</manifest>
