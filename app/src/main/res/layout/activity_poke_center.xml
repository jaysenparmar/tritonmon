<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/pokecenter"
    android:padding="10dp" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/pokemon_center"
        android:id="@+id/pokemonCenterTitle"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:layout_weight="0.5"
        android:gravity="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/heal_pokemon"
        android:id="@+id/healButton"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/pokecenter_btn"
        android:layout_margin="10dp"
        android:layout_weight="0.5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/restock_pokeballs"
        android:id="@+id/restockButton"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/pokecenter_btn"
        android:layout_margin="10dp"
        android:layout_weight="0.5" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/nurseLayout"
        android:layout_weight="2.5">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"></LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/nurseImage"
            android:src="@drawable/nurse"
            android:layout_weight="1.5" />

    </LinearLayout>
</LinearLayout>
