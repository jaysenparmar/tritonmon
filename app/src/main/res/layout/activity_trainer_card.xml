<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/trainerCardScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tritonmon.activity.TrainerCard"
    tools:ignore="MergeRootFrame"
    android:background="@drawable/blue_bg"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/imageView2"
        android:layout_weight="0.5"
        android:src="@drawable/trainercard_title_banner" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.25"
        android:gravity="bottom|center_horizontal"
        android:id="@+id/topHalf">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/trainer_card"
            android:id="@+id/trainerName"
            android:textColor="#FFF"
            android:gravity="fill_horizontal|center_horizontal"
            android:textIsSelectable="true"
            android:layout_gravity="center_horizontal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/trainerRelativeLayout"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/collegeImage"
                android:layout_alignTop="@+id/trainerLayout"
                android:src="@drawable/warren"
                android:layout_alignBottom="@+id/trainerLayout" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/trainerLayout"
                android:gravity="bottom|center_horizontal">

                <ImageView
                    android:layout_width="560dp"
                    android:layout_height="120dp"
                    android:id="@+id/trainerImage"
                    android:src="@drawable/maletrainer000"
                    android:padding="10dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="57dp"
                    android:id="@+id/tradeLayout">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/tradeButton"
                        android:layout_weight="1"
                        android:src="@drawable/trade_en"
                        android:padding="5dp" />

                    <Switch
                        android:layout_width="0dp"
                        android:layout_height="65dp"
                        android:text="@string/trading"
                        android:id="@+id/availableForBattle"
                        android:checked="false"
                        android:layout_alignBottom="@+id/trainerName"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:textColor="#FFF" />
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.25"
        android:id="@+id/bottomHalf"
        android:background="@drawable/trainercard_pokegrid"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp">

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/pokemonRow1"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pokemon1Image"
                android:src="@drawable/p025"
                android:layout_weight="1" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pokemon2Image"
                android:src="@drawable/p025"
                android:layout_weight="1" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pokemon3Image"
                android:src="@drawable/p025"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/pokemonRow2"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pokemon4Image"
                android:src="@drawable/p025"
                android:layout_weight="1" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pokemon5Image"
                android:src="@drawable/p025"
                android:layout_weight="1" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pokemon6Image"
                android:src="@drawable/p025"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
