<RelativeLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tradingPokemonImageButton"
        android:src="@drawable/p025"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/level"
        android:id="@+id/tradingPokemonLevel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@+id/tradingPokemonImageButton"
        android:layout_alignBottom="@+id/tradingPokemonImageButton"
        android:layout_alignLeft="@+id/tradingPokemonImageButton"
        android:layout_alignRight="@+id/tradingPokemonImageButton"
        android:gravity="bottom|center_horizontal"
        android:layout_margin="10dp" />
</RelativeLayout>