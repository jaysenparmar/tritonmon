<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tritonmon.mobile.com.tritonmon"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="20" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.tritonmon.activity.Tritonmon"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tritonmon.activity.Battle"
            android:label="@string/title_activity_battle" >
        </activity>
        <activity
            android:name="com.tritonmon.activity.Login"
            android:label="@string/title_activity_create_avatar" >
        </activity>
        <activity
            android:name="com.tritonmon.activity.FacebookLogin"
            android:label="@string/title_activity_facebook_login" >
        </activity>
        <activity
            android:name="com.tritonmon.activity.MainMenu"
            android:label="@string/title_activity_main_menu" >
        </activity>
        <activity
            android:name="com.tritonmon.activity.MapView"
            android:label="@string/title_activity_map_view" >
        </activity>
        <activity
            android:name="com.tritonmon.activity.PokeCenter"
            android:label="@string/title_activity_poke_center" >
        </activity>
        <activity
            android:name="com.tritonmon.activity.UsersPokemon"
            android:label="@string/title_activity_users_pokemon" >
        </activity>
        <activity
            android:name="com.tritonmon.activity.Welcome"
            android:label="@string/title_activity_welcome" >
        </activity>
        <activity
            android:name="com.tritonmon.activity.Register"
            android:label="@string/title_activity_create_user"
            android:parentActivityName="com.tritonmon.activity.Tritonmon" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tritonmon.activity.Tritonmon" />
        </activity>
    </application>

</manifest>