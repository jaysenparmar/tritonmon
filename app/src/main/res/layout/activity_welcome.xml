<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tritonmon.activity.Welcome"
    tools:ignore="MergeRootFrame" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/line1"
            android:id="@+id/line1Text"
            android:paddingTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/line2"
            android:id="@+id/line2Text"
            android:paddingTop="10dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/boyOrGirlLayout"
            android:gravity="top"
            android:paddingTop="50dp">

            <Button
                android:layout_height="wrap_content"
                android:text="@string/boy"
                android:id="@+id/boyButton"
                android:layout_weight="1"
                android:layout_width="0dp" />

            <Button
                android:layout_height="wrap_content"
                android:text="@string/girl"
                android:id="@+id/girlButton"
                android:layout_weight="1"
                android:layout_width="0dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/choosePokemonLayout"
            android:gravity="center_horizontal"
            android:paddingTop="50dp">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/bulbasaur"
                android:id="@+id/bulbasaurButton"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/bulbasaur"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/charmander"
                android:id="@+id/charmanderButton"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/charmander"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/squirtle"
                android:id="@+id/squirtleButton"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/squirtle"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="bottom|center_horizontal">

            <ImageView
                android:layout_height="wrap_content"
                android:id="@+id/profImage"
                android:src="@drawable/prof"
                android:contentDescription="PokemonProfessor"
                android:layout_weight="1"
                android:layout_width="0dp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
